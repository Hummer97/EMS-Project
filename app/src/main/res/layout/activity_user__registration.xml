<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.User_RegistrationActivity">

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/user_registration_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/create_group"
            tools:ignore="VectorDrawableCompat" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/user_registration_relativeLayout"
        android:layout_width="0dp"
        android:layout_height="510dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/bg_transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_registration_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/img_circular_bg"
        android:padding="2dp"
        android:src="@drawable/avatar"
        app:civ_border_color="#FF000000"
        app:layout_constraintBottom_toTopOf="@+id/user_registration_relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/user_registration_relativeLayout" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/user_registration_guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <EditText
        android:id="@+id/user_registration_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/txt_input_bg"
        android:hint="User Name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/txt_input_bgcolor"
        android:textColorHint="@color/tab_indicator_gray"
        app:layout_constraintEnd_toEndOf="@+id/user_registration_relativeLayout"
        app:layout_constraintStart_toStartOf="@+id/user_registration_relativeLayout"
        app:layout_constraintTop_toBottomOf="@+id/user_registration_img" />

    <EditText
        android:id="@+id/user_registration_mob_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/txt_input_bg"
        android:hint="Mobile No"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/txt_input_bgcolor"
        android:textColorHint="@color/tab_indicator_gray"
        app:layout_constraintEnd_toEndOf="@+id/user_registration_relativeLayout"
        app:layout_constraintStart_toStartOf="@+id/user_registration_relativeLayout"
        app:layout_constraintTop_toBottomOf="@+id/user_registration_user_name" />

    <EditText
        android:id="@+id/user_registration_mail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/txt_input_bg"
        android:hint="Email"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/txt_input_bgcolor"
        android:textColorHint="@color/tab_indicator_gray"
        app:layout_constraintEnd_toEndOf="@+id/user_registration_relativeLayout"
        app:layout_constraintStart_toStartOf="@+id/user_registration_relativeLayout"
        app:layout_constraintTop_toBottomOf="@+id/user_registration_mob_no" />

    <EditText
        android:id="@+id/user_registration_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/txt_input_bg"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/txt_input_bgcolor"
        android:textColorHint="@color/tab_indicator_gray"
        app:layout_constraintEnd_toEndOf="@+id/user_registration_relativeLayout"
        app:layout_constraintStart_toStartOf="@+id/user_registration_relativeLayout"
        app:layout_constraintTop_toBottomOf="@+id/user_registration_mail" />

    <EditText
        android:id="@+id/user_registration_conf_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/txt_input_bg"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/txt_input_bgcolor"
        android:textColorHint="@color/tab_indicator_gray"
        app:layout_constraintEnd_toEndOf="@+id/user_registration_relativeLayout"
        app:layout_constraintStart_toStartOf="@+id/user_registration_relativeLayout"
        app:layout_constraintTop_toBottomOf="@+id/user_registration_password" />

    <Button
        android:id="@+id/user_registration_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/btn_gradient_style"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="@+id/user_registration_relativeLayout"
        app:layout_constraintEnd_toEndOf="@+id/user_registration_relativeLayout"
        app:layout_constraintStart_toStartOf="@+id/user_registration_relativeLayout"
        app:layout_constraintTop_toBottomOf="@+id/user_registration_conf_password" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_registration_btn">

        <TextView
            android:id="@+id/user_registration_login_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If you have an account? "
            android:textColor="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/user_registration_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:textColor="@color/gradient_end_color" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>